<?xml version="1.0" encoding="utf-8"?>
<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup Condition="'$(MSBuildVersion)' &lt; '15.7'">
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard1.3</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net46</TaskFolder>
  </PropertyGroup>
  <PropertyGroup Condition="'$(MSBuildVersion)' &gt;= '15.7'">
    <TaskFolder>netstandard2.0</TaskFolder>
  </PropertyGroup>

  <PropertyGroup>
    <TaskAssembly>$(MSBuildThisFileDirectory)..\tasks\$(TaskFolder)\$(MSBuildThisFileName).dll</TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="THNETII.NuGet.ReferencePathAlias.MSBuildTask.UpdatePackageReferencePathAliases" AssemblyFile="$(TaskAssembly)"/>

</Project>
